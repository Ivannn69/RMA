---
import Layout from '../layouts/Layout.astro';
import VideoGrid from '../components/VideoGrid'

---

<Layout title="Clases">
	<main>
        <div class="section_title">
            <h1>Clases Online</h1>
        </div>
        <section class="clases_hero">
            
            <VideoGrid client:load></VideoGrid>
        </section>
	</main>
</Layout>

<style>
    .clases_hero{
        display: flex;
        flex-direction: column;
        height: auto;
        justify-content: center;
        align-items: center;
        margin: 5rem;
    }
    .section_title{        
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 14px;
        margin-bottom: 14px;
    }
</style>