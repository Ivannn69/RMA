---
interface Props {
    title: string;
    description: string;
    price: string;
}

const {title, description, price} = Astro.props;
---

<a class="suscription-card">
    <h3>{title}</h3>
    <h4>{price}</h4>
    <div class="divider"></div>
    <p>{description}</p>
    <button type="submit" class="obt-button">Obtener</button>
</a>

<style>
    .suscription-card{
        background: white;
        border-radius: 12px;
        padding: 2rem;
        text-decoration: none;
        color: #1e293b;
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .suscription-card:hover{
        transform: translateY(-5px);
        box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1);

    }

    h3{
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: rgb(0, 0, 0);
    }

    h4 {
        font-size: 1rem;
        color: rgb(0, 0, 0);
    }
    p {
        margin-bottom: 1rem;
        flex-grow: 1;
        color: rgb(0, 0, 0);
    }
    
    .divider{
        height: 1px;
        background-color: #ff3131;
        width: auto;
    }

    .obt-button{
        border-radius: 25px;
        border: 0cm;
        font-size: medium;
        color: white;
        cursor: pointer;
        background-color: #ff3131;
        font-weight: 400;
        padding: 10px;
        
    }
    .obt-button:hover{
        background-color: #9b1c1c;
    }
</style>